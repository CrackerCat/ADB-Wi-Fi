<idea-plugin>
    <id>dev.polek.adbwifi</id>
    <name>ADB-Wi-Fi</name>
    <vendor>Yury Polek</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="dev.polek.adbwifi.services.AdbService"/>
        <applicationService serviceImplementation="dev.polek.adbwifi.services.ShellService"/>
        <toolWindow
                id="ADB Wi-Fi"
                anchor="right"
                secondary="true"
                factoryClass="dev.polek.adbwifi.ui.WindowFactory"/>
    </extensions>

    <actions>
        <action
                id="AdbWifi.Refresh"
                class="dev.polek.adbwifi.actions.RefreshAction"
                icon="AllIcons.Actions.Refresh"
                text="Refresh">
            <add-to-group group-id="AdbWifi.ToolbarActions" />
        </action>

        <action
                id="AdbWifi.ToggleShell"
                class="dev.polek.adbwifi.actions.ToggleShellAction"
                icon="AllIcons.Debugger.Console"
                text="Toggle Shell">
            <add-to-group group-id="AdbWifi.ToolbarActions" />
        </action>

        <group id="AdbWifi.ToolbarActions">
            <reference id="AdbWifi.Refresh" />
            <separator />
            <reference id="AdbWifi.ToggleShell" />
        </group>
    </actions>
</idea-plugin>
